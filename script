function myButton() {
    document.getElementById("mySubmit").innerText = "Bravo!";
    // document.getElementById("mySubmit").innerText += "Stop Clicking" //on double click 
    let username = document.getElementById("userInput");
    let message = document.querySelector(".message");
 

    message.innerHTML = `Welcome back ${username.value}`;

} 

function myFun() {
    let x = document.getElementById("passwordInput");
    if (x.type === "password") {
        x.type = "text";
    } else {
        x.type = "password";
    }
}


